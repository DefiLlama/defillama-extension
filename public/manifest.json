{
  "manifest_version": 3,
  "name": "DefiLlama",
  "version": "0.0.1.3",
  "description": "DefiLlama Extension",
  "background": {
    "service_worker": "src/pages/background/index.js",
    "type": "module"
  },
  "action": {
    "default_title": "DefiLlama",
    "default_popup": "src/pages/popup/index.html",
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.etherscan.io/*",
        "*://*.bscscan.com/*",
        "*://*.snowtrace.io/*",
        "*://*.ftmscan.com/*",
        "*://*.arbiscan.io/*",
        "*://*.polygonscan.com/*",
        "*://*.cronoscan.com/*",
        "*://*.moonscan.io/*",
        "*://*.gnosisscan.io/*",
        "*://*.bobascan.com/*",
        "*://*.aurorascan.dev/*"
      ],
      "js": [
        "src/pages/content/index.js"
      ]
    }
  ],
  "devtools_page": "src/pages/devtools/index.html",
  "web_accessible_resources": [
    {
      "resources": [
        "assets/js/*.js",
        "assets/css/*.css",
        "assets/img/memes/*.png",
        "assets/png/*.png",
        "assets/png/*.chunk.png",
        "icon-128.png",
        "icon-34.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "alarms"
  ]
}